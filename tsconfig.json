{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    //   "paths": {
    //     "*": [
    //         "node_modules/*",
    //         "src/types/*"
    //     ]
    // }
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "./knexfile.js"
  ],
  "include": [
    "./src/**/*"
  ],
}
